<body>

  <div class="container">
     <div id="citydata">
       <div class="blur">
        <h1>Enter the city name</h1>
        <br>
        <form action="/" method="POST">
            <input type="text" name="cityname" value="" placeholder="City name">
            <button  type="button" class="btn" onclick="myFunction()">Submit</button>
        </form>
       </div>
     </div>


     <div id="cityWeather" style="display: none; color: #FFDEFF;">
         <div class="container-fluid">
             <div class="row">
                 <div class="col-lg-12 mt-5 pt-4">
                     <h5>Monday 18 Aug 2022</h5>
                     <h5><%=place%></h5>
                     <div class="icon">
                        <img src="<%=imgURL%>">
                       
                        <h2 class="mt-3"><%=temperature%><sup><i class="bi bi-circle" style="font-size: 10px;"></i>
                        </sup> C</h2>      
                    </div>
                    <h6 class="text-center"><%=weather%></h6>
                 </div>              
             </div>

             </div>
         </div>
     </div>
  </div>



<script>
    element.addEventListener("click", myFunction);

    function myFunction() {
    document.getElementById("cityWeather").style.display = "block";
    document.getElementById("citydata").style.display="none";
}
</script>
 
